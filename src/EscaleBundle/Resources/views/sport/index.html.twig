{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sport list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Sportetat</th>
                <th>Sportlib</th>
                <th>Sportpicto</th>
                <th>Sportphoto</th>
                <th>Sportsite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sport in sports %}
            <tr>
                <td><a href="{{ path('admin_sport_show', { 'id': sport.id }) }}">{{ sport.id }}</a></td>
                <td>{% if sport.sportEtat %}Yes{% else %}No{% endif %}</td>
                <td>{{ sport.sportLib }}</td>
                <td>{{ sport.sportPicto }}</td>
                <td>{{ sport.sportPhoto }}</td>
                <td>{{ sport.sportSite }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_sport_show', { 'id': sport.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_sport_edit', { 'id': sport.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_sport_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
